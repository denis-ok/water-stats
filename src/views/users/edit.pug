extends /layouts/application.pug

block content
  - const userId = formObjUser.object.id;
  .container
    .py-4.text-center
      if currentUser.hasDefaultPassword()
        h2 Change Password
        p.h6
          | Please change default password to use application
      else
        h2 Edit Profile
        p.h6
          | You can edit your profile here

  .container.col-md-4
    +formFor({ url: urlFor('patchUser', userId), method: 'patch' })
      +input(formObjUser, 'email', 'E-mail (as login)')
      +input(formObjUser, 'firstName', 'First Name')
      +input(formObjUser, 'lastName', 'Last Name')

      h4.text-center.my-4 User address

      .row
        .container.col-sm
          +input(formObjAddr, 'house', 'House number')
        .container.col-sm
          +input(formObjAddr, 'flat', 'Flat number')

      +button('Submit')